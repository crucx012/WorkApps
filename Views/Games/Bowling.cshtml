@{
    ViewBag.Title = "Bowling";
}

@section scripts{
    <script src="~/Scripts/bowling.js"></script>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<article>
    <input id="nudPins" value="0" runat="server" type="number" min="0" max="10" onkeypress="hitenter(event)" />
    <button onclick="getFrame(); return false;">submit</button>
    <label id="lblMessage"></label>
    <br />
    <span id="rolls">
        @for (int index = 0; index < 20; index+=2)
        {
            <label id="lblRoll@(index)" class="pins"></label>
            <label id="lblRoll@(index+1)" class="pins2"></label>
        }
        <label id="lblRoll20" class="pins2"></label>
    </span>
    <br />
    <span id="score">
        @for (int index = 0; index < 9; index++)
        {
            <label id="lblFrame@(index)" class="score"></label>
        }
        <label id="lblFrame9" class="score2"></label>
    </span>
</article>
