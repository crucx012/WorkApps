@section scripts{
    <script src="~/Scripts/TicTacToe.js"></script>
    <script src="~/Scripts/JQuery/jquery-1.10.2.js"></script>
    <script src="~/Scripts/JQuery/jquery-ui-1.10.4.js"></script>
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<article>
    <span id='players'>
        <label>Player Marker:</label>
        <br />
        @Html.RadioButton("Marker", "X", true)X
        @Html.RadioButton("Marker", "O", false)O
        <br />
        <input id="Submit1" type="submit" value="submit" onclick="startGame()" />
        <span id="data" hidden>
            <label id="secondPlayerStart" hidden></label>
            @for (int i = 0; i < 9; i++)
            {
                <label id="turns_@i" hidden></label>
            }
        </span>
        <br />
    </span>
    <div id="loading" hidden title="PC is thinking">
        <img src="~/Images/TicTacToe/ajax-loader.gif" />
    </div>
    <div id="Message"></div>
    <span id="board">
        @for (int i = 1; i <= 9; i++)
        {
            <img src="~/Images/TicTacToe/E.jpg" id="square_@i" width="100" height="100" onclick="takeTurn(@i)" />
            if (i % 3 == 0)
            {
                <br />
            }
        }
        <input id="Reset1" type="reset" value="reset" onclick="reset()" />
    </span>
</article>

<aside>
    <img id="player1" src="~/Images/TicTacToe/E.jpg" alt="E" width="100" height="100" />
    <br />
    <label>Player 1</label>
    <br />
    <label>Wins:</label>
    <br />
    <br />
    <img id="player2" src="~/Images/TicTacToe/E.jpg" alt="E" width="100" height="100" />
    <br />
    <label>Player 2</label>
    <br />
    <label>Wins:</label>
    <br />
    <br />
    <label>Draws:</label>
</aside>